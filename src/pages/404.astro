---
import { Icon } from "astro-icon/components";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
---

<MainGridLayout title={i18n(I18nKey.notFound)} description={i18n(I18nKey.notFoundDescription)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-96 bg-[#1a1b26] border border-black/50 dark:border-white/20 shadow-2xl">
        <!-- Terminal Header -->
        <div class="absolute top-0 left-0 w-full h-8 bg-[#16161e] flex items-center px-4 border-b border-black/50 dark:border-white/10">
            <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-[#ff5f56]"></div>
                <div class="w-3 h-3 rounded-full bg-[#ffbd2e]"></div>
                <div class="w-3 h-3 rounded-full bg-[#27c93f]"></div>
            </div>
            <div class="mx-auto text-xs text-[#565f89] font-mono">root@server: /var/www/html</div>
        </div>

        <!-- Terminal Content -->
        <div class="mt-8 p-6 font-mono text-sm md:text-base w-full overflow-x-auto">
            <div class="text-[#c0caf5]">
                <span class="text-[#7aa2f7]">root@server</span>:<span class="text-[#9ece6a]">~</span>$ ./access_page.sh --url "{Astro.url.pathname}"
            </div>
            <div class="mt-2 text-[#f7768e]">
                [ERROR] 404: Page not found
            </div>
            <div class="mt-2 text-[#565f89]">
                Stack trace:
            </div>
            <div class="pl-4 text-[#565f89]">
                at Router.resolve (/src/core/router.ts:404:23)<br/>
                at Server.handleRequest (/src/server/index.ts:128:45)<br/>
                at processTicksAndRejections (internal/process/task_queues.js:95:5)
            </div>
            
            <div class="mt-6 text-[#c0caf5]">
                <span class="text-[#7aa2f7]">root@server</span>:<span class="text-[#9ece6a]">~</span>$ <span class="animate-blink">_</span>
            </div>

            <div class="mt-8 border-t border-white/10 pt-4">
                <div class="text-[#565f89] mb-2"># Suggested actions:</div>
                <a href="/" class="inline-block px-2 py-1 text-[#7aa2f7] hover:bg-[#7aa2f7] hover:text-[#1a1b26] transition-colors">
                    > cd /home
                </a>
                <br/>
                <a href="javascript:history.back()" class="inline-block px-2 py-1 text-[#7aa2f7] hover:bg-[#7aa2f7] hover:text-[#1a1b26] transition-colors mt-1">
                    > cd ..
                </a>
            </div>
        </div>
    </div>
</MainGridLayout>

<style>
    /* Custom scrollbar for the terminal window */
    .overflow-x-auto::-webkit-scrollbar {
        height: 8px;
    }
    .overflow-x-auto::-webkit-scrollbar-track {
        background: #1a1b26;
    }
    .overflow-x-auto::-webkit-scrollbar-thumb {
        background: #414868;
        border-radius: 4px;
    }
    .overflow-x-auto::-webkit-scrollbar-thumb:hover {
        background: #565f89;
    }
</style>